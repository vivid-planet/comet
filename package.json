{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/admin/*",
        "packages/api/*",
        "packages/site/*",
        "packages/eslint-config",
        "packages/cli",
        "demo/*"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-admin"
    },
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "dev:admin": "rimraf packages/admin/**/lib/index.d.ts && dotenv -c -- pm2 start ecosystem-admin.config.js",
        "dev:cms": "dotenv -c -- pm2 start ecosystem-cms.config.js",
        "build": "lerna run build --concurrency=1 --stream",
        "build:lib": "lerna run build --concurrency=1 --stream --no-private",
        "publish:release": "lerna publish --force-publish --no-private",
        "storybook": "yarn workspace comet-admin-stories storybook",
        "lint": "lerna run lint --concurrency=1 --stream",
        "lint:eslint": "lerna run lint:eslint --concurrency=1 --stream",
        "lint:tsc": "lerna run lint:tsc --concurrency=1 --stream",
        "lint:lib": "yarn lint --no-private",
        "test": "lerna run test --concurrency=1 --stream",
        "test:lib": "lerna run test --concurrency=1 --stream --no-private",
        "build:storybook": "yarn build && yarn workspace comet-admin-stories build-storybook",
        "intl:extract": "formatjs extract './packages/admin/**/*.ts*' --out-file 'lang/en.json' --ignore './**.d.ts' --ignore './packages/admin/admin-stories/**/*' --format simple",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@aws-sdk/client-s3": "^3.47.0",
        "@azure/storage-blob": "^12.0.0",
        "@formatjs/cli": "^4.8.3",
        "@mikro-orm/cli": "^5.0.4",
        "@mikro-orm/core": "^5.0.4",
        "@mikro-orm/migrations": "^5.0.4",
        "@mikro-orm/nestjs": "^5.0.0",
        "@mikro-orm/postgresql": "^5.0.4",
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/graphql": "^9.0.0",
        "@storybook/addon-docs": "^6.2.7",
        "@types/jscodeshift": "^0.11.4",
        "@types/uuid": "^8.3.0",
        "class-transformer": "^0.3.0",
        "class-validator": "^0.13.0",
        "dotenv-cli": "^5.1.0",
        "exceljs": "^3.4.0",
        "express": "^4.0.0",
        "file-saver": "^2.0.2",
        "final-form": "^4.16.1",
        "graphql": "^15.4.0",
        "history": "^4.10.1",
        "husky": "^7.0.4",
        "jscodeshift": "^0.13.1",
        "jss": "^9.8.7",
        "lerna": "^4.0.0",
        "lint-staged": "^12.3.7",
        "nestjs-console": "^7.0.0",
        "next": "^11.0.0",
        "oidc-provider": "^7.11.3",
        "pg": "^8.0.0",
        "pg-error-constants": "^1.0.0",
        "pm2": "^4.5.6",
        "prettier": "^2.0.0",
        "react": "^17.0",
        "react-dom": "^17.0",
        "rimraf": "^3.0.2",
        "rxjs": "^7.0.0",
        "styled-components": "^5.0.0",
        "typescript": "^4.2.2",
        "wait-on": "^5.3.0",
        "yarn-run-all": "^3.1.1"
    },
    "engines": {
        "node": "14",
        "yarn": "3"
    },
    "resolutions": {
        "@emotion/react": "11.9.3",
        "@typescript-eslint/parser": "^5.0.0",
        "@types/react": "^17.0.0"
    },
    "packageManager": "yarn@3.2.0"
}
