{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/*"
    ],
    "private": true,
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "build": "lerna run build --stream",
        "prestart": "rimraf packages/*/lib",
        "start": "pm2 start ecosystem.config.js",
        "storybook": "yarn workspace @comet/admin-stories storybook",
        "lint": "yarn lint:eslint && yarn lint:tsc",
        "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx,.json,.md packages/*/src",
        "prelint:tsc": "yarn build",
        "lint:tsc": "lerna run lint:tsc --stream",
        "prebuild:storybook": "yarn build",
        "build:storybook": "yarn workspace @comet/admin-stories build-storybook",
        "intl:extract": "formatjs extract ./packages/**/*.ts* --out-file lang/en.json --ignore ./**.d.ts --ignore ./packages/admin-stories/**/* --format simple",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@formatjs/cli": "^2.13.12",
        "@storybook/addon-docs": "^6.2.7",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-formatjs": "^2.9.3",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "eslint-plugin-unused-imports": "^1.0.0",
        "exceljs": "^3.4.0",
        "file-saver": "^2.0.2",
        "final-form": "^4.16.1",
        "graphql": "^15.4.0",
        "history": "^4.10.1",
        "husky": "^6.0.0",
        "jss": "^9.8.7",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "pm2": "^4.5.6",
        "prettier": "^2.1.2",
        "react": "^16.8",
        "react-dom": "^16.8",
        "rimraf": "^3.0.2",
        "typescript": "^4.2.2",
        "wait-on": "^5.3.0"
    },
    "engines": {
        "node": "14",
        "yarn": "^1.22.10"
    }
}
