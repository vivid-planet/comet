{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/admin/*",
        "packages/api/*",
        "packages/site/*",
        "packages/eslint-config/",
        "demo/*"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-admin"
    },
    "scripts": {
        "postinstall": "node node_modules/@vivid/certificates/bin/download-certificates.js",
        "clean": "lerna run clean --stream --parallel",
        "start": "pm2 start ecosystem.config.js",
        "build": "lerna run build --concurrency=1 --stream",
        "build:lib": "yarn build --no-private",
        "build:admin": "lerna run build --scope \"@comet/admin*\"",
        "build:api": "lerna run build --scope \"@comet/api*\"",
        "build:site": "lerna run build --scope \"@comet/site*\"",
        "publish:release": "lerna publish --force-publish --no-push --no-git-tag-version --no-private",
        "storybook": "npm run --prefix packages/admin/admin-stories storybook",
        "test": "lerna run test --stream",
        "lint": "lerna run lint --concurrency=1 --stream",
        "lint:lib": "yarn lint --no-private",
        "prebuild:storybook": "npm run build",
        "build:storybook": "npm --prefix packages/admin/admin-stories run build-storybook",
        "intl:extract": "formatjs extract ./packages/admin/**/*.ts* --out-file lang/en.json --ignore ./**.d.ts --ignore ./packages/admin/admin-stories/**/* --format simple",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@formatjs/cli": "^2.13.12",
        "@storybook/addon-docs": "^6.2.7",
        "@types/node": "^14.0.0",
        "@types/uuid": "^8.3.0",
        "@vivid/certificates": "^1.0.2",
        "exceljs": "^3.4.0",
        "file-saver": "^2.0.2",
        "final-form": "^4.16.1",
        "graphql": "^15.4.0",
        "history": "^4.10.1",
        "husky": "^6.0.0",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "pm2": "^4.5.6",
        "prettier": "^2.1.2",
        "react": "^17.0",
        "react-dom": "^17.0",
        "rimraf": "^3.0.2",
        "wait-on": "^5.3.0"
    },
    "engines": {
        "node": "14",
        "npm": "7"
    },
    "resolutions": {
        "csstype": "^3",
        "styled-components": "^5",
        "react-router": "^5",
        "react-router-dom": "^5",
        "typescript": "4.4.4"
    },
    "packageManager": "yarn@3.2.0"
}
