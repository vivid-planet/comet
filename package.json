{
    "name": "root",
    "license": "BSD-2-Clause",
    "workspaces": [
        "packages/admin/*",
        "packages/api/*",
        "packages/site/*",
        "packages/eslint-config",
        "packages/cli",
        "demo/*"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "dev:admin": "dotenv -c -- pm2 start ecosystem-admin.config.js",
        "dev:cms": "yarn build:admin:skippable && dotenv -c -- pm2 start ecosystem-cms.config.js",
        "dev:cms:api": "dotenv -c -- pm2 start ecosystem-cms-api.config.js",
        "dev:cms:admin": "yarn build:admin:skippable && dotenv -c -- pm2 start ecosystem-cms-admin.config.js",
        "dev:cms:site": "dotenv -c -- pm2 start ecosystem-cms-site.config.js",
        "dev:demo": "yarn build:admin:skippable && yarn build:cms:skippable && dotenv -c -- pm2 start ecosystem-demo.config.js",
        "dev:demo:api": "yarn build:cms:api:skippable && dotenv -c -- pm2 start ecosystem-demo-api.config.js",
        "dev:demo:admin": "yarn build:admin:skippable && yarn build:cms:admin:skippable && dotenv -c -- pm2 start ecosystem-demo-admin.config.js",
        "dev:demo:site": "yarn build:cms:site:skippable && dotenv -c -- pm2 start ecosystem-demo-site.config.js",
        "build": "lerna run build --concurrency=1 --stream",
        "build:admin": "lerna run build --scope '@comet/admin*'",
        "build:admin:skippable": "test -f packages/admin/admin/lib/index.d.ts && echo 'Skipping Admin build' || yarn build:admin",
        "build:cms": "lerna run build --scope '@comet/cms*' --scope '@comet/blocks*'",
        "build:cms:skippable": "test -f packages/admin/cms-admin/lib/index.d.ts && echo 'Skipping CMS build' || yarn build:cms",
        "build:cms:api": "lerna run build --scope '@comet/cms-api' --scope '@comet/blocks-api'",
        "build:cms:api:skippable": "test -f packages/api/cms-api/lib/index.d.ts && echo 'Skipping CMS API build' || yarn build:cms:api",
        "build:cms:admin": "lerna run build --scope '@comet/cms-admin' --scope '@comet/blocks-admin'",
        "build:cms:admin:skippable": "test -f packages/admin/cms-admin/lib/index.d.ts && echo 'Skipping CMS Admin build' || yarn build:cms:admin",
        "build:cms:site": "lerna run build --scope '@comet/cms-site'",
        "build:cms:site:skippable": "test -f packages/site/cms-site/lib/index.d.ts && echo 'Skipping CMS Site build' || yarn build:cms:site",
        "build:lib": "lerna run build --concurrency=1 --stream --no-private",
        "publish:release": "lerna publish --force-publish --no-private",
        "storybook": "yarn workspace comet-admin-stories storybook",
        "lint": "lerna run lint --concurrency=1 --stream",
        "lint:eslint": "lerna run lint:eslint --concurrency=1 --stream",
        "lint:tsc": "lerna run lint:tsc --concurrency=1 --stream",
        "lint:lib": "yarn lint --no-private",
        "test": "lerna run test --concurrency=1 --stream",
        "test:lib": "lerna run test --concurrency=1 --stream --no-private",
        "build:storybook": "yarn build && yarn workspace comet-admin-stories build-storybook",
        "intl:extract": "formatjs extract './packages/admin/**/*.ts*' --out-file 'lang/en.json' --ignore './**.d.ts' --ignore './packages/admin/admin-stories/**/*' --format simple --throws",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@aws-sdk/client-s3": "^3.47.0",
        "@azure/storage-blob": "^12.0.0",
        "@formatjs/cli": "^4.8.3",
        "@mikro-orm/cli": "^5.0.4",
        "@mikro-orm/core": "^5.0.4",
        "@mikro-orm/migrations": "^5.0.4",
        "@mikro-orm/nestjs": "^5.1.0",
        "@mikro-orm/postgresql": "^5.0.4",
        "@nestjs/apollo": "^10.0.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/graphql": "^10.0.0",
        "@nestjs/testing": "^9.0.11",
        "@storybook/addon-docs": "^6.2.7",
        "@types/jest": "^29.0.1",
        "@types/jscodeshift": "^0.11.4",
        "@types/uuid": "^8.3.0",
        "class-transformer": "^0.5.0",
        "class-validator": "^0.13.0",
        "dotenv-cli": "^5.1.0",
        "exceljs": "^3.4.0",
        "express": "^4.0.0",
        "file-saver": "^2.0.2",
        "final-form": "^4.16.1",
        "graphql": "^15.4.0",
        "history": "^4.10.1",
        "husky": "^7.0.4",
        "jscodeshift": "^0.13.1",
        "jss": "^9.8.7",
        "lerna": "^4.0.0",
        "lint-staged": "^12.3.7",
        "nestjs-console": "^8.0.0",
        "next": "^11.0.0",
        "oidc-provider": "^7.11.3",
        "pg": "^8.0.0",
        "pg-error-constants": "^1.0.0",
        "pm2": "^5.2.0",
        "prettier": "^2.0.0",
        "react": "^17.0",
        "react-dom": "^17.0",
        "rimraf": "^3.0.2",
        "rxjs": "^7.0.0",
        "styled-components": "^5.0.0",
        "typescript": "^4.2.2",
        "wait-on": "^5.3.0",
        "yarn-run-all": "^3.1.1"
    },
    "engines": {
        "node": "14",
        "yarn": "3"
    },
    "resolutions": {
        "@emotion/react": "11.9.3",
        "@typescript-eslint/parser": "^5.0.0",
        "@types/react": "^17.0.0"
    },
    "packageManager": "yarn@3.2.0"
}
