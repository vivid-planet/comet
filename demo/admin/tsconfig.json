{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "inlineSources": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "module": "ESNext",
        "moduleResolution": "Node",
        "noEmit": true,
        "noImplicitAny": true,
        "paths": {
            "@src/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ESNext"
    },
    "include": ["src/**/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
