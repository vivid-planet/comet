{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "commonjs",
        "outDir": "./preBuild/build",
        "paths": {
            "@src/*": ["src/*"]
        },
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": ["preBuild/src/**/*.ts"]
}
