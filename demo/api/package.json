{
    "name": "comet-demo-api",
    "version": "1.0.0",
    "private": true,
    "description": "Comet API Demo Application",
    "type": "commonjs",
    "scripts": {
        "api-generator": "rimraf --glob 'src/**/generated' && comet-api-generator generate",
        "api-generator:watch": "rimraf --glob 'src/**/generated' && comet-api-generator generate --watch",
        "build": "pnpm clean && pnpm run intl:compile && pnpm api-generator && nest build",
        "check-node-version": "check-node-version --node $(cat ../../.nvmrc)",
        "clean": "rimraf dist",
        "console": "NODE_OPTIONS='--max-old-space-size=256' dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- ts-node --transpile-only -r tsconfig-paths/register src/console.ts",
        "console:prod": "node dist/console.js",
        "db:migrate": "pnpm console migrate --",
        "db:migrate:prod": "pnpm console:prod migrate --",
        "dev:nest": "pnpm clean && pnpm intl:compile && pnpm db:migrate && pnpm console createBlockIndexViews && NODE_OPTIONS='--max-old-space-size=1024' dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- nest start --debug --watch --preserveWatchOutput",
        "dev:reload": "rimraf src/reload.ts && chokidar \"node_modules/@comet/cms-api/lib/**\" \"node_modules/@comet/brevo-api/lib/**\" -s -c \"echo '// change' >> src/reload.ts\"",
        "fixtures": "pnpm console fixtures --",
        "fixtures:prod": "pnpm console:prod fixtures --",
        "intl:compile": "pnpm run intl:compile:comet-demo",
        "intl:compile:comet-demo": "formatjs compile-folder --format simple --ast lang/comet-demo-lang/api lang-compiled/comet-demo-api",
        "intl:extract": "formatjs extract \"src/**/*.ts*\" --ignore ./**.d.ts --out-file lang-extracted/en.json --format simple --throws",
        "lint": "pnpm run api-generator && pnpm run intl:compile && run-p lint:prettier lint:eslint lint:tsc",
        "lint:ci": "pnpm run api-generator && pnpm run intl:compile && run-p lint:prettier lint:eslint lint:tsc lint:generated-files-not-modified",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:generated-files-not-modified": "git diff --exit-code HEAD -- $(find src -type f -path '*/generated/*')",
        "lint:prettier": "pnpm exec prettier --check '*.{ts,js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --project ./tsconfig.lint.json",
        "mikro-orm": "dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- mikro-orm",
        "repl": "pnpm run start --entryFile repl",
        "start": "pnpm clean && pnpm intl:compile && dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- nest start --debug --watch --preserveWatchOutput",
        "start:dev": "pnpm check-node-version && run-p dev:*",
        "start:prod": "node dist/main",
        "storybook": "storybook dev -p 4004 --no-open"
    },
    "dependencies": {
        "@apollo/server": "^5.2.0",
        "@as-integrations/express5": "^1.1.2",
        "@comet/cms-api": "workspace:*",
        "@comet/brevo-api": "workspace:*",
        "@comet/mail-react": "workspace:*",
        "@faker-js/faker": "^10.1.0",
        "@kubernetes/client-node": "^1.3.0",
        "@mikro-orm/cli": "^6.4.16",
        "@mikro-orm/core": "^6.4.16",
        "@mikro-orm/migrations": "^6.4.16",
        "@mikro-orm/nestjs": "^6.1.1",
        "@mikro-orm/postgresql": "^6.4.16",
        "@nestjs/apollo": "^13.2.3",
        "@nestjs/common": "^11.1.11",
        "@nestjs/core": "^11.1.11",
        "@nestjs/graphql": "^13.2.3",
        "@nestjs/jwt": "^11.0.2",
        "@nestjs/platform-express": "^11.1.11",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.66.0",
        "@opentelemetry/exporter-prometheus": "^0.207.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
        "@opentelemetry/sdk-node": "^0.207.0",
        "@sentry/node": "^9.37.0",
        "change-case": "^5.4.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "cli-progress": "^3.12.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "date-fns": "^4.1.0",
        "express": "^5.2.1",
        "graphql": "^16.11.0",
        "graphql-scalars": "^1.24.2",
        "helmet": "^8.1.0",
        "mjml-browser": "^4.18.0",
        "mjml": "^4.18.0",
        "nest-commander": "^3.20.1",
        "react": "^18.3.1",
        "react-intl": "^7.1.11",
        "reflect-metadata": "^0.2.2",
        "response-time": "^2.3.4",
        "rimraf": "^6.1.2",
        "rxjs": "^7.8.2",
        "slugify": "^1.6.6",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@comet/api-generator": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@formatjs/cli": "^6.7.4",
        "@nestjs/cli": "^11.0.14",
        "@nestjs/schematics": "^11.0.9",
        "@storybook/addon-docs": "^10.1.11",
        "@storybook/react-vite": "^10.1.11",
        "@types/cli-progress": "^3.11.6",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.6",
        "@types/inquirer": "^8.2.12",
        "@types/mjml": "^4.7.4",
        "@types/mjml-browser": "^4.15.0",
        "@types/node": "^24.10.13",
        "@types/react": "^18.3.27",
        "@types/response-time": "^2.3.9",
        "check-node-version": "^4.2.1",
        "chokidar-cli": "^3.0.0",
        "dotenv-cli": "^9.0.0",
        "eslint": "^9.30.1",
        "eslint-plugin-storybook": "^10.1.11",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.2",
        "storybook": "^10.1.11",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^3.15.0",
        "typescript": "^5.9.3"
    },
    "mikro-orm": {
        "configPaths": [
            "./src/db/ormconfig.cli.ts",
            "./dist/db/ormconfig.cli.js"
        ],
        "useTsNode": true
    }
}
