{
    "name": "comet-demo-api",
    "version": "1.0.0",
    "private": true,
    "description": "Comet API Demo Application",
    "type": "commonjs",
    "scripts": {
        "api-generator": "rimraf --glob 'src/**/generated' && comet-api-generator generate",
        "api-generator:watch": "rimraf --glob 'src/**/generated' && comet-api-generator generate --watch",
        "build": "pnpm clean && pnpm api-generator && nest build",
        "check-node-version": "check-node-version --node $(cat ../../.nvmrc)",
        "clean": "rimraf dist",
        "console": "NODE_OPTIONS='--max-old-space-size=256' dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- ts-node --transpile-only -r tsconfig-paths/register src/console.ts",
        "console:prod": "node dist/console.js",
        "db:migrate": "pnpm console migrate --",
        "db:migrate:prod": "pnpm console:prod migrate --",
        "dev:nest": "pnpm clean && pnpm db:migrate && pnpm console createBlockIndexViews && NODE_OPTIONS='--max-old-space-size=1024' dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- nest start --debug --watch --preserveWatchOutput",
        "dev:reload": "rimraf src/reload.ts && chokidar \"node_modules/@comet/cms-api/lib/**\" -s -c \"echo '// change' >> src/reload.ts\"",
        "fixtures": "pnpm console fixtures --",
        "fixtures:prod": "pnpm console:prod fixtures --",
        "lint": "pnpm run api-generator && run-p lint:prettier lint:eslint lint:tsc lint:generated-files-not-modified",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:generated-files-not-modified": "git diff --exit-code HEAD -- $(find src -type f -path '*/generated/*')",
        "lint:prettier": "pnpm exec prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --project ./tsconfig.lint.json",
        "mikro-orm": "dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- mikro-orm",
        "repl": "pnpm run start --entryFile repl",
        "start": "pnpm clean && dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- nest start --debug --watch --preserveWatchOutput",
        "start:dev": "pnpm check-node-version && run-p dev:*",
        "start:prod": "node dist/main"
    },
    "dependencies": {
        "@apollo/server": "^4.12.2",
        "@comet/cms-api": "workspace:*",
        "@faker-js/faker": "^9.9.0",
        "@kubernetes/client-node": "^1.3.0",
        "@mikro-orm/cli": "^6.4.16",
        "@mikro-orm/core": "^6.4.16",
        "@mikro-orm/migrations": "^6.4.16",
        "@mikro-orm/nestjs": "^6.1.1",
        "@mikro-orm/postgresql": "^6.4.16",
        "@nestjs/apollo": "^13.1.0",
        "@nestjs/common": "^11.1.3",
        "@nestjs/core": "^11.1.3",
        "@nestjs/graphql": "^13.1.0",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/platform-express": "^11.1.3",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.65.0",
        "@opentelemetry/exporter-prometheus": "^0.206.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
        "@opentelemetry/sdk-node": "^0.206.0",
        "@sentry/node": "^9.37.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cli-progress": "^3.12.0",
        "compression": "^1.8.0",
        "cookie-parser": "^1.4.7",
        "date-fns": "^4.1.0",
        "express": "^5.1.0",
        "graphql": "^16.11.0",
        "graphql-scalars": "^1.24.2",
        "helmet": "^4.6.0",
        "nest-commander": "^3.17.0",
        "reflect-metadata": "^0.2.2",
        "response-time": "^2.3.3",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.2",
        "slugify": "^1.6.6",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@comet/api-generator": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@nestjs/cli": "^11.0.7",
        "@nestjs/schematics": "^11.0.5",
        "@types/cli-progress": "^3.11.6",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.9",
        "@types/express": "^5.0.3",
        "@types/inquirer": "^8.2.11",
        "@types/node": "^24.9.1",
        "@types/response-time": "^2.3.9",
        "check-node-version": "^4.2.1",
        "chokidar-cli": "^3.0.0",
        "dotenv-cli": "^9.0.0",
        "eslint": "^9.30.1",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^3.15.0",
        "typescript": "5.8.3"
    },
    "mikro-orm": {
        "configPaths": [
            "./src/db/ormconfig.cli.ts",
            "./dist/db/ormconfig.cli.js"
        ],
        "useTsNode": true
    }
}
