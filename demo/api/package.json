{
    "name": "comet-demo-api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "api-generator": "rimraf 'src/*/generated' && comet-api-generator generate",
        "build": "yarn api-generator && rimraf dist && nest build",
        "start": "yarn api-generator && rimraf dist && dotenv -c -- nest start",
        "start:dev": "yarn api-generator && rimraf dist && dotenv -c -- nest start --watch --preserveWatchOutput",
        "start:debug": "yarn api-generator && rimraf dist && dotenv -c -- nest start --debug --watch --preserveWatchOutput",
        "start:prod": "node dist/main",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0  --ext .ts,.tsx,.js,.jsx,.json,.md src/",
        "lint:tsc": "tsc --project ./tsconfig.lint.json",
        "console": "dotenv -c -- ts-node --transpile-only -r tsconfig-paths/register src/console.ts",
        "console:prod": "node dist/console.js",
        "mikro-orm": "mikro-orm",
        "mikro-orm:drop": "mikro-orm schema:drop -r",
        "mikro-orm:migration:generate": "mikro-orm migration:create",
        "db:migrate:prod": "yarn console:prod migrate --",
        "db:migrate": "yarn api-generator && yarn console migrate --",
        "fixtures:prod": "yarn console:prod fixtures --",
        "fixtures": "yarn console fixtures --"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.47.0",
        "@azure/storage-blob": "^12.0.0",
        "@comet/blocks-api": "^3.0.0",
        "@comet/cms-api": "^3.0.0",
        "@hapi/accept": "^5.0.0",
        "@mikro-orm/cli": "^5.0.4",
        "@mikro-orm/core": "^5.0.4",
        "@mikro-orm/migrations": "^5.0.4",
        "@mikro-orm/nestjs": "^5.1.0",
        "@mikro-orm/postgresql": "^5.0.4",
        "@nestjs/apollo": "^10.0.0",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/graphql": "^10.0.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.0",
        "apollo-server-core": "^3.0.0",
        "apollo-server-express": "^3.0.0",
        "async": "^3.0.0",
        "base64url": "^3.0.0",
        "class-transformer": "^0.5.0",
        "class-validator": "^0.13.0",
        "commander": "^8.0.0",
        "compression": "^1.0.0",
        "cookie-parser": "^1.0.0",
        "elastic-apm-node": "^3.0.0",
        "exifr": "^6.0.0",
        "express": "^4.17.1",
        "faker": "^5.0.0",
        "file-type": "^16.0.0",
        "graphql": "^15.7.2",
        "graphql-type-json": "^0.3.0",
        "hasha": "^5.0.0",
        "image-size": "^0.9.0",
        "mime": "^2.0.0",
        "multer": "^1.0.0",
        "nestjs-console": "^8.0.0",
        "node-fetch": "^2.0.0",
        "passport": "^0.4.0",
        "pg": "^8.0.0",
        "pg-error-constants": "^1.0.0",
        "reflect-metadata": "^0.1.0",
        "rimraf": "^3.0.0",
        "rxjs": "^7.0.0",
        "slugify": "^1.0.0",
        "uuid": "^9.0.0",
        "webpack": "^5.64.2"
    },
    "devDependencies": {
        "@comet/eslint-config": "^3.0.0",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@types/async": "^3.0.0",
        "@types/compression": "^1.0.0",
        "@types/cookie-parser": "^1.0.0",
        "@types/draft-js": "^0.10.0",
        "@types/express": "^4.0.0",
        "@types/faker": "^5.0.0",
        "@types/mime": "^2.0.0",
        "@types/multer": "^1.0.0",
        "@types/node": "^14.0.0",
        "@types/passport": "^1.0.0",
        "@types/pg": "^8.0.0",
        "@types/rimraf": "^3.0.0",
        "@types/uuid": "^8.0.0",
        "dotenv-cli": "^4.0.0",
        "eslint": "^8.0.0",
        "prettier": "^2.0.0",
        "ts-loader": "^8.0.0",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.0.0",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/db/ormconfig.cli.ts",
            "./dist/db/ormconfig.cli.js"
        ]
    }
}
