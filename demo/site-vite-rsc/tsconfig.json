{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "erasableSyntaxOnly": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@src/*": ["src/*"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["vite/client", "@vitejs/plugin-rsc/types"],
        "verbatimModuleSyntax": true
    }
}
