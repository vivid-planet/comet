{
    "name": "comet-demo-site",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "run-p gql:types generate-block-types && yarn build:preBuild && NODE_OPTIONS='--inspect=localhost:9230' node server.js",
        "next-build": "yarn build:publicGenerated && next build",
        "build": "run-p gql:types generate-block-types && yarn build:preBuild",
        "build:preBuild": "run-s clear:preBuild build:preBuild:tsc",
        "build:preBuild:tsc": "tsc --project tsconfig.preBuild.json",
        "build:publicGenerated": "node preBuild/build/preBuild/src/publicGenerator/generate.js",
        "extract:publicGenerated": "node preBuild/build/preBuild/src/publicGenerator/extract.js",
        "serve": "pm2 start ecosystem.config.js && pm2 logs",
        "start": "yarn extract:publicGenerated && NODE_ENV=production node server.js",
        "export": "next export",
        "gql:types": "yarn clear:types && graphql-codegen",
        "gql:watch": "yarn clear:types && graphql-codegen --watch",
        "clear:preBuild": "rimraf preBuild/build",
        "clear:types": "rimraf \"src/*.generated.ts\"",
        "lint": "run-p gql:types generate-block-types && run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 --config ./.eslintrc.cli.js --ext .ts,.tsx,.js,.jsx,.json,.md src/",
        "lint:tsc": "tsc --project .",
        "lint:tscPreBuild": "tsc --project tsconfig.preBuild.json",
        "generate-block-types": "dotenv -- ts-node generate-block-types.ts",
        "generate-block-types:watch": "chokidar -s \"**/block-meta.json\" -c \"yarn generate-block-types\""
    },
    "dependencies": {
        "@comet/cms-site": "^2.0.0",
        "@googlemaps/js-api-loader": "^1.0.0",
        "@googlemaps/markerclustererplus": "^1.0.0",
        "babel-plugin-inline-react-svg": "^2.0.0",
        "babel-plugin-styled-components": "^1.0.0",
        "express": "^4.0.0",
        "fs-extra": "^9.0.0",
        "graphql": "^15.0.0",
        "graphql-request": "^3.0.0",
        "next": "^12.0.0",
        "next-auth": "^3.0.0",
        "pm2": "^4.0.0",
        "pure-react-carousel": "^1.0.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-intl": "^5.0.0",
        "react-is": "^17.0.2",
        "react-select": "^4.0.0",
        "redraft": "^0.10.0",
        "sitemap": "^6.0.0",
        "styled-components": "^5.0.0",
        "swiper": "^6.0.0",
        "ts-node": "^10.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@comet/eslint-config": "^2.0.0",
        "@graphql-codegen/cli": "^1.0.0",
        "@graphql-codegen/named-operations-object": "^2.2.0",
        "@graphql-codegen/typescript": "^1.0.0",
        "@graphql-codegen/typescript-operations": "^1.0.0",
        "@types/fs-extra": "^9.0.0",
        "@types/google.maps": "^3.0.0",
        "@types/node": "^14.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-is": "^17.0.0",
        "@types/react-select": "^4.0.0",
        "@types/styled-components": "^5.0.0",
        "chokidar-cli": "^2.0.0",
        "dotenv-cli": "^4.0.0",
        "eslint": "^8.0.0",
        "prettier": "^2.0.0",
        "rimraf": "^3.0.0",
        "tsconfig-paths": "^3.0.0",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    }
}
