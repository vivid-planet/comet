{
    "name": "comet-demo-site",
    "version": "1.0.0",
    "private": true,
    "description": "Comet Site Demo Application",
    "type": "commonjs",
    "scripts": {
        "build": "run-s intl:compile && run-p gql:types generate-block-types css:types build-server && next build",
        "build-server": "tsc --project tsconfig.server.json",
        "check-node-version": "check-node-version --node $(cat ../../.nvmrc)",
        "css:types": "typed-scss-modules src --nameFormat none --exportType default --aliasPrefixes.@src src",
        "css:types:watch": "pnpm run css:types --watch",
        "dev": "pnpm check-node-version && run-s intl:compile && run-p gql:types generate-block-types css:types build-server && dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- sh -c 'PORT=$SITE_PORT node --inspect=localhost:9230 --max-old-space-size=512 dist/server.js'",
        "export": "next export",
        "generate-block-types": "comet generate-block-types",
        "generate-block-types:watch": "chokidar -s \"block-meta.json\" -c \"pnpm generate-block-types\"",
        "gql:types": "graphql-codegen",
        "gql:watch": "graphql-codegen --watch",
        "intl:compile": "formatjs compile-folder --format simple --ast lang/comet-demo-lang/site lang-compiled/",
        "intl:extract": "formatjs extract \"src/**/*.{ts,tsx}\" --ignore **/*.d.ts --out-file lang-extracted/en.json --format simple",
        "lint": "run-s intl:compile && run-p gql:types generate-block-types css:types && run-p lint:prettier lint:eslint lint:tsc lint:style",
        "lint:ci": "pnpm run lint",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check '*.{ts,js,json,md,yml,yaml,css,scss}'",
        "lint:style": "pnpm exec stylelint '**/*.{css,scss}'",
        "lint:tsc": "tsc --project .",
        "serve": "NODE_ENV=production node dist/server.js"
    },
    "dependencies": {
        "@comet/mail-react": "workspace:*",
        "@comet/site-nextjs": "workspace:*",
        "@faire/mjml-react": "^3.5.3",
        "@formatjs/cli": "^6.7.2",
        "@next/bundle-analyzer": "^14.2.35",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.66.0",
        "@opentelemetry/exporter-prometheus": "^0.207.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
        "@opentelemetry/instrumentation-runtime-node": "^0.21.0",
        "@opentelemetry/sdk-node": "^0.207.0",
        "cache-manager": "^5.7.6",
        "clsx": "^2.1.1",
        "filesize": "^10.1.6",
        "ioredis": "^5.6.1",
        "lru-cache": "^11.2.4",
        "mjml": "^4.18.0",
        "mjml-browser": "^4.18.0",
        "next": "^14.2.30",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-focus-lock": "^2.13.7",
        "react-intl": "^7.1.11",
        "redraft": "^0.10.2",
        "swiper": "^12.0.3",
        "usehooks-ts": "^3.1.1",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@babel/core": "^7.28.6",
        "@comet/cli": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@graphql-codegen/add": "^5.0.3",
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/named-operations-object": "^3.1.1",
        "@graphql-codegen/near-operation-file-preset": "^3.1.0",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-operations": "^4.6.1",
        "@parcel/watcher": "^2.5.1",
        "@types/mjml": "^4.7.4",
        "@types/mjml-browser": "^4.15.0",
        "@types/node": "^24.9.1",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "check-node-version": "^4.2.1",
        "chokidar-cli": "^3.0.0",
        "eslint": "^9.30.1",
        "graphql": "^16.0.0",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "sass": "^1.90.0",
        "stylelint": "^16.24.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "typed-scss-modules": "^8.1.1",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": "24"
    }
}
