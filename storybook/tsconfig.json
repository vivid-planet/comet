{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ESNext.AsyncIterable"],
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5",
        "declarationMap": true,
        "outDir": "lib",
        "rootDirs": ["src", ".storybook"]
    },
    "include": ["./src"]
}
