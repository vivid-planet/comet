{
    "name": "@comet/eslint-config",
    "version": "8.12.0",
    "description": "A set of ESLint configurations for Comet projects",
    "repository": {
        "directory": "packages/eslint-config",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "type": "module",
    "exports": {
        "./core.js": {
            "import": "./core.js"
        },
        "./future/nestjs.js": {
            "import": "./future/nestjs.js"
        },
        "./future/nextjs.js": {
            "import": "./future/nextjs.js"
        },
        "./future/react.js": {
            "import": "./future/react.js"
        },
        "./nestjs.js": {
            "import": "./nestjs.js"
        },
        "./nextjs.js": {
            "import": "./nextjs.js"
        },
        "./react.js": {
            "import": "./react.js"
        }
    },
    "scripts": {
        "lint": "run-p lint:prettier lint:eslint",
        "lint:ci": "pnpm run lint",
        "lint:eslint": "eslint --max-warnings 0 *.json ",
        "lint:prettier": "pnpm exec prettier --check '*.{ts,js,json,md,yml,yaml}'"
    },
    "dependencies": {
        "@calm/eslint-plugin-react-intl": "^1.4.1",
        "@comet/eslint-plugin": "workspace:*",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.30.1",
        "@next/eslint-plugin-next": "^15.5.9",
        "eslint-config-next": "^15.5.9",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-formatjs": "^5.4.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsonc": "^2.20.1",
        "eslint-plugin-package-json": "^0.56.0",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "globals": "^15.15.0",
        "npm-run-all2": "^8.0.4",
        "typescript-eslint": "^8.53.0"
    },
    "devDependencies": {
        "eslint": "^9.30.1",
        "prettier": "^3.6.2",
        "typescript": "5.9.3"
    },
    "peerDependencies": {
        "eslint": ">=9",
        "prettier": ">=3"
    },
    "peerDependenciesMeta": {
        "next": {
            "optional": true
        }
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
