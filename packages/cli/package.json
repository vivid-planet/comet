{
    "name": "@comet/cli",
    "version": "7.13.0",
    "repository": {
        "directory": "packages/cli",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet": "bin/comet.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && tsc",
        "clean": "rimraf lib",
        "dev": "tsc --watch",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc"
    },
    "dependencies": {
        "commander": "^9.5.0",
        "prettier": "^3.5.0"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:^7.13.0",
        "@types/node": "^22.13.1",
        "eslint": "^9.20.0",
        "npm-run-all2": "^5.0.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5"
    },
    "peerDependencies": {
        "ts-node": "^10.9.1"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
