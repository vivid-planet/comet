{
    "name": "@comet/cli",
    "version": "7.21.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet",
        "directory": "packages/cli"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet": "bin/comet.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && tsc",
        "clean": "rimraf lib",
        "dev": "tsc --watch",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ package.json",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc"
    },
    "dependencies": {
        "commander": "^9.2.0",
        "prettier": "^2.7.1"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:^7.21.0",
        "@types/node": "^22.0.0",
        "eslint": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.0.0"
    },
    "peerDependencies": {
        "ts-node": "^10.9.1"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
