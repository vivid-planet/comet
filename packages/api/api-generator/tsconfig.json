{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": ["ESNext"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
    },
    "exclude": ["node_modules", "lib"],
    "extends": "../../../tsconfig.core.json",
    "include": ["./src"]
}
