{
    "name": "@comet/api-generator",
    "version": "8.0.0-beta.1",
    "repository": {
        "directory": "packages/api/api-generator",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet-api-generator": "bin/api-generator.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && tsc -p tsconfig.build.json",
        "clean": "rimraf lib",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc",
        "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@comet/cms-api": "workspace:*",
        "commander": "^9.5.0",
        "pluralize": "^8.0.0",
        "ts-morph": "^25.0.1",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:*",
        "@mikro-orm/cli": "^6.4.10",
        "@mikro-orm/core": "^6.4.10",
        "@mikro-orm/postgresql": "^6.4.10",
        "@nestjs/graphql": "^13.0.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.10",
        "@types/pluralize": "^0.0.33",
        "class-validator": "^0.14.1",
        "eslint": "^9.22.0",
        "jest": "^29.7.0",
        "npm-run-all2": "^5.0.2",
        "prettier": "^3.5.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.6",
        "typescript": "^5.7.3",
        "uuid": "^11.1.0"
    },
    "peerDependencies": {
        "@mikro-orm/cli": "^6.0.0",
        "@nestjs/graphql": "^13.0.0",
        "class-validator": "^0.14.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
