{
    "name": "@comet/api-generator",
    "version": "8.5.0",
    "description": "Comet API Generator CLI tool",
    "repository": {
        "directory": "packages/api/api-generator",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "type": "commonjs",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet-api-generator": "bin/api-generator.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "build": "pnpm run clean && tsc -p tsconfig.build.json",
        "clean": "rimraf lib",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --noEmit",
        "test": "NODE_OPTIONS=--experimental-vm-modules pnpm exec jest",
        "test:updateSnapshot": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "dependencies": {
        "@comet/cms-api": "workspace:*",
        "chokidar": "^4.0.3",
        "commander": "^9.5.0",
        "pluralize": "^8.0.0",
        "ts-morph": "^25.0.1",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:*",
        "@mikro-orm/cli": "^6.4.16",
        "@mikro-orm/core": "^6.4.16",
        "@mikro-orm/postgresql": "^6.4.16",
        "@nestjs/graphql": "^13.1.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.9.1",
        "@types/pluralize": "^0.0.33",
        "class-validator": "^0.14.2",
        "eslint": "^9.30.1",
        "jest": "^29.7.0",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.0",
        "typescript": "5.8.3",
        "uuid": "^11.1.0"
    },
    "peerDependencies": {
        "@mikro-orm/cli": "^6.0.0",
        "@nestjs/graphql": "^13.0.0",
        "class-validator": "^0.14.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
