{
    "name": "@comet/brevo-api",
    "version": "3.1.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet/",
        "directory": "packages/api/brevo-api"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && tsc -p tsconfig.build.json",
        "clean": "rimraf lib",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "generate-block-meta": "ts-node generate-block-meta.ts",
        "generate-block-meta:watch": "chokidar \"src/\" -c \"$npm_execpath generate-block-meta\"",
        "generate-schema": "ts-node generate-schema.ts",
        "generate-schema:watch": "chokidar \"src/\" -c \"$npm_execpath generate-schema\"",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ package.json",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --noEmit",
        "mikro-orm": "dotenv -e .env.secrets -e .env.local -e .env -e .env.site-configs -- mikro-orm",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@fast-csv/parse": "^5.0.5",
        "@getbrevo/brevo": "^3.0.1",
        "@nestjs/axios": "^4.0.1",
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/jwt": "^11.0.1",
        "axios": "^1.13.2",
        "cache-manager": "^7.2.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "commander": "^14.0.2",
        "nest-commander": "^3.20.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@comet/cms-api": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@kubernetes/client-node": "^1.0.0",
        "@mikro-orm/cli": "^6.0.0",
        "@mikro-orm/core": "^6.0.0",
        "@mikro-orm/migrations": "^6.0.0",
        "@mikro-orm/nestjs": "^6.0.2",
        "@mikro-orm/postgresql": "^6.0.0",
        "@nestjs/common": "^11.1.3",
        "@nestjs/core": "^11.1.3",
        "@nestjs/graphql": "^13.1.0",
        "@nestjs/platform-express": "^11.1.3",
        "@types/inquirer": "^8.1.3",
        "@types/jest": "^29.5.14",
        "@types/lodash.isequal": "^4.5.8",
        "@types/node-fetch": "^2.6.12",
        "@types/uuid": "^8.3.4",
        "chokidar-cli": "^2.1.0",
        "eslint": "^9.39.1",
        "express": "^5.0.1",
        "graphql": "^16.11.0",
        "graphql-scalars": "1.24.2",
        "jest": "^29.7.0",
        "jest-junit": "^15.0.0",
        "lodash.isequal": "^4.5.0",
        "prettier": "^3.4.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "uuid": "^8.3.2"
    },
    "peerDependencies": {
        "@comet/cms-api": "^8.0.0",
        "@mikro-orm/cli": "^6.0.0",
        "@mikro-orm/core": "^6.0.0",
        "@mikro-orm/migrations": "^6.0.0",
        "@mikro-orm/nestjs": "^6.0.0",
        "@mikro-orm/postgresql": "^6.0.0",
        "@nestjs/common": "^11.0.0",
        "@nestjs/core": "^11.0.0",
        "@nestjs/platform-express": "^11.0.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
