{
    "name": "@comet/blocks-api",
    "version": "7.0.0-beta.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet",
        "directory": "packages/api/blocks-api"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && tsc -p tsconfig.build.json",
        "clean": "rimraf lib",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "generate-block-meta": "ts-node generate-block-meta.ts",
        "generate-block-meta:watch": "chokidar \"src/\" -c \"npm run generate-block-meta\"",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ package.json",
        "lint:tsc": "tsc --noEmit",
        "test": "jest --verbose=true",
        "test:watch": "jest -w"
    },
    "dependencies": {
        "class-transformer": "^0.5.0",
        "class-validator": "0.13.2",
        "rimraf": "^3.0.0"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:^7.0.0-beta.0",
        "@nestjs/common": "^9.0.0",
        "@types/draft-js": "^0.11.10",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.0.0",
        "chokidar-cli": "^2.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.5.0",
        "jest-junit": "^15.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.0",
        "reflect-metadata": "^0.1.0",
        "rxjs": "^7.1.0",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.0.0",
        "typescript": "^4.0.0"
    },
    "peerDependencies": {
        "@nestjs/common": "^9.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
