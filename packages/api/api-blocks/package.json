    },
    "devDependencies": {
        "@comet/eslint-config": "^2.0.0",
        "@types/draft-js": "^0.10.0",
        "@types/jest": "^27.0.0",
        "chokidar-cli": "^2.0.0",
        "eslint": "^8.0.0",
        "jest": "^27.0.0",
        "jest-junit": "^13.0.0",
        "prettier": "^2.0.0",
        "reflect-metadata": "^0.1.0",
        "ts-jest": "^27.0.0",
