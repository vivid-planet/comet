{
    "name": "@comet/site-nextjs",
    "version": "8.5.1",
    "description": "Comet Site Next.js package",
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet",
        "directory": "packages/site/site-nextjs"
    },
    "license": "BSD-2-Clause",
    "type": "module",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js"
        },
        "./css": "./lib/style.css"
    },
    "module": "./lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*"
    ],
    "scripts": {
        "build": "pnpm run clean && pnpm run generate-block-types && vite build",
        "clean": "rimraf lib 'src/**/*.generated.ts'",
        "dev": "pnpm run clean && pnpm run generate-block-types && vite build --watch",
        "generate-block-types": "comet generate-block-types",
        "generate-block-types:watch": "chokidar -s \"block-meta.json\" -c \"pnpm run generate-block-types\"",
        "lint": "pnpm run generate-block-types && run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check './**/*.{js,json,md,yml,yaml,css,scss}'",
        "lint:tsc": "tsc --noEmit",
        "test": "jest --verbose=true --passWithNoTests",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@comet/site-react": "workspace:*",
        "clsx": "^2.1.1",
        "jose": "^5.10.0",
        "server-only": "^0.0.1"
    },
    "devDependencies": {
        "@comet/cli": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.2.0",
        "@types/react-dom": "^19.2.0",
        "@vitejs/plugin-react": "^4.6.0",
        "chokidar-cli": "^3.0.0",
        "eslint": "^9.30.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "next": "^15.5.4",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "rimraf": "^6.0.1",
        "rollup": "^4.44.2",
        "rollup-plugin-preserve-directives": "^0.4.0",
        "sass": "^1.89.2",
        "ts-jest": "^29.4.0",
        "typescript": "5.8.3",
        "vite": "^5.4.19",
        "vite-plugin-dts": "^4.5.4"
    },
    "peerDependencies": {
        "next": "^15.0.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
