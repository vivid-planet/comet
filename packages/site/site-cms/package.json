{
    "name": "@comet/site-cms",
    "version": "2.0.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*",
        "access-token-service-worker.ejs"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-admin",
        "directory": "packages/site/site-cms"
    },
    "publishConfig": {
        "@comet:registry": "https://gitlab.vivid-planet.com/api/v4/projects/990/packages/npm/"
    },
    "scripts": {
        "build": "rimraf lib/ && npm run generate-block-types && tsc",
        "dev": "yarn generate-block-types && tsc --watch",
        "lint": "yarn generate-block-types && run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 --ext .ts,.tsx,.js,.jsx,.json,.md src/",
        "lint:tsc": "tsc",
        "generate-block-types": "ts-node generate-block-types.ts",
        "generate-block-types:watch": "chokidar -s \"**/block-meta.json\" -c \"yarn generate-block-types\""
    },
    "dependencies": {
        "next-auth": "^3.0.0",
        "rimraf": "^3.0.0",
        "scroll-into-view-if-needed": "^2.0.0",
        "use-debounce": "^6.0.0"
    },
    "peerDependencies": {
        "next": "^11.0.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "styled-components": "^5.0.0"
    },
    "devDependencies": {
        "@comet/eslint-config": "^2.0.0",
        "@gitbeaker/node": "^34.0.0",
        "chokidar-cli": "^2.0.0",
        "eslint": "^7.0.0",
        "next": "^11.0.0",
        "prettier": "^2.0.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    }
}
