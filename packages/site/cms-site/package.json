{
    "name": "@comet/cms-site",
    "version": "3.0.1",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*",
        "access-token-service-worker.ejs"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet",
        "directory": "packages/site/cms-site"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "scripts": {
        "build": "rimraf lib/ && npm run generate-block-types && tsc",
        "dev": "yarn generate-block-types && tsc --watch --preserveWatchOutput",
        "lint": "yarn generate-block-types && run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 --ext .ts,.tsx,.js,.jsx,.json,.md src/",
        "lint:tsc": "tsc --noEmit",
        "generate-block-types": "comet generate-block-types",
        "generate-block-types:watch": "chokidar -s \"**/block-meta.json\" -c \"yarn generate-block-types\"",
        "test": "jest --verbose=true",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "next-auth": "^3.0.0",
        "rimraf": "^3.0.0",
        "scroll-into-view-if-needed": "^2.0.0",
        "use-debounce": "^6.0.0"
    },
    "peerDependencies": {
        "next": "^12.0.0",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "styled-components": "^5.0.0"
    },
    "devDependencies": {
        "@comet/cli": "^3.0.1",
        "@comet/eslint-config": "^3.0.1",
        "@gitbeaker/node": "^34.0.0",
        "@types/jest": "^27.0.0",
        "@types/styled-components": "^5.0.0",
        "chokidar-cli": "^2.0.0",
        "eslint": "^8.0.0",
        "jest": "^27.0.0",
        "jest-junit": "^13.0.0",
        "next": "^12.0.0",
        "prettier": "^2.0.0",
        "ts-jest": "^27.0.0",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    },
    "license": "BSD-2-Clause"
}
