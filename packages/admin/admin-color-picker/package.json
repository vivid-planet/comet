{
    "name": "@comet/admin-color-picker",
    "version": "8.0.0-beta.5",
    "repository": {
        "directory": "packages/admin/admin-color-picker",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "$npm_execpath run clean && run-p build:babel build:types",
        "build:babel": "npx babel ./src -x \".ts,.tsx\" -d lib",
        "build:types": "tsc --project ./tsconfig.json --emitDeclarationOnly",
        "clean": "rimraf lib",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --noEmit",
        "start": "run-p start:babel start:types",
        "start:babel": "npx babel ./src -x \".ts,.tsx\" -d lib -w",
        "start:types": "tsc --project ./tsconfig.json --emitDeclarationOnly --watch --preserveWatchOutput"
    },
    "dependencies": {
        "@comet/admin": "workspace:*",
        "@comet/admin-icons": "workspace:*",
        "react-colorful": "^5.6.1",
        "tinycolor2": "^1.6.0",
        "use-debounce": "^10.0.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.26.4",
        "@babel/core": "^7.26.10",
        "@comet/admin-babel-preset": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@mui/material": "^7.1.0",
        "@types/react": "^18.3.22",
        "@types/react-dom": "^18.3.7",
        "@types/tinycolor2": "^1.4.6",
        "eslint": "^9.22.0",
        "final-form": "^4.20.10",
        "npm-run-all2": "^5.0.2",
        "prettier": "^3.5.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-final-form": "^6.5.9",
        "react-intl": "^7.1.10",
        "rimraf": "^6.0.1",
        "typescript": "^5.7.3"
    },
    "peerDependencies": {
        "@mui/material": "^7.0.0",
        "react": "^17.0.0 || ^18.0.0",
        "react-dom": "^17.0.0 || ^18.0.0",
        "react-final-form": "^6.3.1",
        "react-intl": "^5.0.0 || ^6.0.0 || ^7.0.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
