{
    "name": "@comet/admin-theme",
    "version": "2.0.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-admin",
        "directory": "packages/admin/admin-theme"
    },
    "dependencies": {
        "lodash.merge": "^4.6.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@comet/admin": "^2.0.0",
        "@comet/admin-babel-preset": "^2.0.0",
        "@comet/admin-color-picker": "^2.0.0",
        "@comet/admin-icons": "^2.0.0",
        "@comet/admin-react-select": "^2.0.0",
        "@comet/admin-rte": "^2.0.0",
        "@comet/eslint-config": "^2.0.0",
        "@types/lodash.merge": "^4.6.6",
        "eslint": "^8.0.0",
        "prettier": "^2.0.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    },
    "peerDependencies": {
        "@mui/material": "^5.0.0",
        "@mui/styles": "^5.0.0",
        "@mui/system": "^5.0.0",
        "react": "^17.0"
    },
    "scripts": {
        "build": "rimraf lib && run-p build:babel build:types",
        "build:babel": "npx babel ./src -x \".ts,.tsx\" -d lib",
        "build:types": "tsc --project ./tsconfig.json --emitDeclarationOnly",
        "start": "rimraf lib && run-p start:babel start:types",
        "start:babel": "npx babel ./src -x \".ts,.tsx\" -d lib -w",
        "start:types": "tsc --project ./tsconfig.json --emitDeclarationOnly --watch --preserveWatchOutput",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/",
        "lint:tsc": "tsc --noEmit"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "license": "BSD-2-Clause"
}
