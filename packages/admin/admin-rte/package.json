{
    "name": "@comet/admin-rte",
    "version": "8.5.1",
    "description": "Comet Admin Rich Text Editor component",
    "repository": {
        "directory": "packages/admin/admin-rte",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "type": "commonjs",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "pnpm run clean && run-p build:babel build:types",
        "build:babel": "pnpm exec babel ./src -x \".ts,.tsx\" -d lib",
        "build:types": "tsc --project ./tsconfig.json --emitDeclarationOnly",
        "clean": "rimraf lib",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc --noEmit",
        "start": "run-p start:babel start:types",
        "start:babel": "pnpm exec babel ./src -x \".ts,.tsx\" -d lib -w",
        "start:types": "tsc --project ./tsconfig.json --emitDeclarationOnly --watch --preserveWatchOutput",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@comet/admin": "workspace:*",
        "@comet/admin-icons": "workspace:*",
        "detect-browser": "^5.3.0",
        "draft-js-export-html": "^1.4.1",
        "draft-js-import-html": "^1.4.1",
        "draftjs-conductor": "^3.0.0",
        "immutable": "~3.8.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.28.0",
        "@babel/core": "^7.28.0",
        "@comet/admin-babel-preset": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@mui/material": "^7.2.0",
        "@types/draft-js": "^0.11.18",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.23",
        "@types/react-dom": "^18.3.7",
        "draft-js": "^0.11.7",
        "eslint": "^9.30.1",
        "final-form": "^4.20.10",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-final-form": "^6.5.9",
        "react-intl": "^7.1.11",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.0",
        "typescript": "5.8.3"
    },
    "peerDependencies": {
        "@mui/material": "^7.0.0",
        "draft-js": "^0.11.4",
        "final-form": "^4.16.1",
        "react": "^17.0.0 || ^18.0.0",
        "react-dom": "^17.0.0 || ^18.0.0",
        "react-final-form": "^6.3.1",
        "react-intl": "^5.0.0 || ^6.0.0 || ^7.0.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
