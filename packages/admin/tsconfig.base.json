{
    "extends": "../../tsconfig.core.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ESNext.AsyncIterable"],
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "esnext",
        "declarationMap": true,
        "module": "preserve",
        "moduleResolution": "bundler",
        "rootDir": "src",
        "verbatimModuleSyntax": true
    },
    "compileOnSave": false
}
