{
    "name": "@comet/admin-generator",
    "version": "8.7.1",
    "description": "Comet Admin Generator CLI tool",
    "repository": {
        "directory": "packages/admin/admin-generator",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "type": "commonjs",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet-admin-generator": "bin/admin-generator.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "build": "pnpm run clean && tsc -p tsconfig.build.json",
        "clean": "rimraf lib",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "lint": "run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
        "test:updateSnapshot": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "dependencies": {
        "@graphql-tools/graphql-file-loader": "^7.5.17",
        "@graphql-tools/load": "^7.8.14",
        "change-case": "^4.1.2",
        "commander": "^9.5.0",
        "glob": "^11.0.0",
        "graphql": "^16.11.0",
        "object-path": "^0.11.8",
        "pluralize": "^8.0.0",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@apollo/client": "^3.14.0",
        "@comet/admin": "workspace:*",
        "@comet/admin-icons": "workspace:*",
        "@comet/cms-admin": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@mui/material": "^7.3.5",
        "@mui/x-data-grid": "^7.29.8",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.9.1",
        "@types/object-path": "^0.11.4",
        "@types/pluralize": "^0.0.33",
        "@types/react": "^18.3.23",
        "eslint": "^9.30.1",
        "final-form": "^4.20.10",
        "jest": "^29.7.0",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "react": "^18.3.1",
        "react-intl": "^7.1.11",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.4.0",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
