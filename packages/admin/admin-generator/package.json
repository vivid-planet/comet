{
    "name": "@comet/admin-generator",
    "version": "8.4.2",
    "description": "Comet Admin Generator CLI tool",
    "repository": {
        "directory": "packages/admin/admin-generator",
        "type": "git",
        "url": "https://github.com/vivid-planet/comet"
    },
    "license": "BSD-2-Clause",
    "type": "commonjs",
    "main": "lib/index.js",
    "typings": "lib/index.d.ts",
    "bin": {
        "comet-admin-generator": "bin/admin-generator.js"
    },
    "files": [
        "bin/**/*.js",
        "lib/*"
    ],
    "scripts": {
        "admin-generator": "./bin/admin-generator.js generate",
        "build": "$npm_execpath run clean && run-s generate-block-types gql:types && tsc -p tsconfig.build.json",
        "build-storybook": "run-s generate-block-types gql:types admin-generator && storybook build",
        "clean": "rimraf lib && rimraf --glob 'src/**/generated'",
        "dev": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
        "generate-block-types": "comet generate-block-types --inputs",
        "gql:types": "graphql-codegen",
        "lint": "run-s generate-block-types admin-generator gql:types && run-p lint:prettier lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/ package.json --no-warn-ignored",
        "lint:prettier": "npx prettier --check './**/*.{js,json,md,yml,yaml}'",
        "lint:tsc": "tsc",
        "storybook": "run-s generate-block-types gql:types admin-generator && storybook dev -p 26640",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
        "test:updateSnapshot": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "dependencies": {
        "@graphql-tools/graphql-file-loader": "^7.5.17",
        "@graphql-tools/load": "^7.8.14",
        "change-case": "^4.1.2",
        "commander": "^9.5.0",
        "glob": "^10.4.5",
        "graphql": "^16.11.0",
        "object-path": "^0.11.8",
        "pluralize": "^8.0.0",
        "ts-node": "^10.9.2"
    },
    "devDependencies": {
        "@apollo/client": "^3.13.1",
        "@comet/admin": "workspace:*",
        "@comet/admin-date-time": "workspace:*",
        "@comet/admin-icons": "workspace:*",
        "@comet/cms-admin": "workspace:*",
        "@comet/eslint-config": "workspace:*",
        "@fontsource-variable/roboto-flex": "^5.2.5",
        "@graphql-codegen/add": "^5.0.3",
        "@graphql-codegen/cli": "^5.0.5",
        "@graphql-codegen/fragment-matcher": "^5.1.0",
        "@graphql-codegen/introspection": "^4.0.3",
        "@graphql-codegen/named-operations-object": "^3.1.0",
        "@graphql-codegen/near-operation-file-preset": "^3.0.0",
        "@graphql-codegen/typescript": "^4.1.5",
        "@graphql-codegen/typescript-operations": "^4.5.1",
        "@mui/material": "^7.2.0",
        "@mui/x-data-grid": "^7.29.8",
        "@mui/x-data-grid-pro": "^7.27.2",
        "@mui/x-license": "^7.29.1",
        "@storybook/addon-docs": "^9.1.10",
        "@storybook/addon-webpack5-compiler-babel": "^3.0.6",
        "@storybook/react-webpack5": "^9.1.10",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.16.3",
        "@types/object-path": "^0.11.4",
        "@types/pluralize": "^0.0.33",
        "@types/react": "^18.3.23",
        "date-fns": "^4.1.0",
        "eslint": "^9.30.1",
        "eslint-plugin-storybook": "^9.1.10",
        "final-form": "^4.20.10",
        "history": "^5.3.0",
        "jest": "^29.7.0",
        "msw": "^2.7.0",
        "msw-storybook-addon": "^2.0.4",
        "npm-run-all2": "^8.0.0",
        "prettier": "^3.6.2",
        "react": "^18.3.1",
        "react-intl": "^7.1.11",
        "react-router": "^5.3.4",
        "react-router-dom": "^5.3.4",
        "rimraf": "^6.0.1",
        "storybook": "^9.1.10",
        "ts-jest": "^29.4.0",
        "typescript": "5.8.3"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
