{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "lib": ["ES2020"],
        "outDir": "lib",
        "paths": {
            "@src/*": ["src/*"]
        },
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "ES2015"
    },
    "exclude": ["node_modules", "lib"],
    "extends": "../../../tsconfig.core.json",
    "include": ["./src"]
}
