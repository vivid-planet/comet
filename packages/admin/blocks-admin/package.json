{
    "name": "@comet/blocks-admin",
    "version": "3.0.1",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/*"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet",
        "directory": "packages/admin/blocks-admin"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "scripts": {
        "build": "rimraf lib && yarn generate-block-types && run-p build:babel build:types",
        "build:babel": "npx babel ./src -x \".ts,.tsx\" -d lib",
        "build:types": "tsc --project ./tsconfig.json --emitDeclarationOnly",
        "start": "rimraf lib && yarn generate-block-types && run-p start:babel start:types",
        "start:babel": "npx babel ./src -x \".ts,.tsx\" -d lib -w",
        "start:types": "tsc --project ./tsconfig.json --emitDeclarationOnly --watch --preserveWatchOutput",
        "lint": "yarn generate-block-types && run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/",
        "lint:tsc": "tsc --noEmit",
        "generate-block-types": "comet generate-block-types --inputs",
        "generate-block-types:watch": "chokidar -s \"**/block-meta.json\" -c \"yarn generate-block-types\"",
        "test": "jest --verbose=true",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@comet/admin": "^3.0.1",
        "@comet/admin-icons": "^3.0.1",
        "clsx": "^1.1.1",
        "lodash.isequal": "^4.0.0",
        "rimraf": "^3.0.0",
        "scroll-into-view-if-needed": "^2.0.0",
        "uuid": "^8.0.0"
    },
    "peerDependencies": {
        "@emotion/react": "^11.0.0",
        "@emotion/styled": "^11.0.0",
        "@mui/lab": "^5.0.0-alpha.76",
        "@mui/material": "^5.0.0",
        "@mui/styles": "^5.0.0",
        "clipboard-copy": "^4.0.0",
        "lodash.isequal": "^4.0.0",
        "react": "^16.8.0 || ^17.0.0",
        "react-dnd": "^16.0.0",
        "react-dom": "^16.8.0 || ^17.0.0",
        "react-final-form": "^6.0.0",
        "react-intl": "^5.0.0",
        "react-router": "^5.0.0",
        "react-router-dom": "^5.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@comet/admin-babel-preset": "^3.0.1",
        "@comet/cli": "^3.0.1",
        "@comet/eslint-config": "^3.0.1",
        "@types/jest": "^27.0.0",
        "@types/lodash.isequal": "^4.0.0",
        "@types/react-router": "^5.0.0",
        "@types/react-router-dom": "^5.0.0",
        "@types/uuid": "^8.0.0",
        "chokidar-cli": "^2.0.0",
        "eslint": "^8.0.0",
        "jest": "^27.0.0",
        "jest-junit": "^13.0.0",
        "prettier": "^2.0.0",
        "ts-jest": "^27.0.0",
        "typescript": "^4.0.0",
        "yarn-run-all": "^3.0.0"
    },
    "license": "BSD-2-Clause"
}
