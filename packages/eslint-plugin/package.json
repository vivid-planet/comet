{
    "name": "@comet/eslint-plugin",
    "version": "6.11.0",
    "main": "lib/index.js",
    "scripts": {
        "build": "$npm_execpath run clean && tsc",
        "clean": "rimraf lib",
        "dev": "tsc --watch",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/",
        "lint:tsc": "tsc",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@types/eslint": "^8.37.0",
        "@types/jest": "^27.0.2",
        "eslint": "^8.36.0",
        "jest": "^29.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "typescript": "^4.0.0"
    },
    "peerDependencies": {
        "eslint": "8"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
