{
    "name": "comet-docs",
    "version": "0.0.0",
    "private": true,
    "description": "Documentation for Comet",
    "scripts": {
        "build": "run-s clear:generated-docs generate-component-docs:static-storybook build:docusaurus",
        "build:docusaurus": "docusaurus build",
        "clear": "run-p clear:docusaurus clear:generated-docs",
        "clear:docusaurus": "docusaurus clear",
        "clear:generated-docs": "rimraf docs/5-admin-components/components/generated.*",
        "deploy": "docusaurus deploy",
        "docusaurus": "docusaurus",
        "generate-component-docs:running-storybook": "FETCH_FROM_RUNNING_STORYBOOK=true ts-node --project tsconfig.ts-node.json src/utils/generateComponentDocs.ts",
        "generate-component-docs:static-storybook": "ts-node --project tsconfig.ts-node.json src/utils/generateComponentDocs.ts",
        "lint": "run-p lint:prettier lint:eslint lint:spelling",
        "lint:ci": "pnpm run lint",
        "lint:eslint": "eslint --max-warnings 0 src/ **/*.json --no-warn-ignored",
        "lint:prettier": "pnpm exec prettier --check '*.{ts,js,json,md,yml,yaml}'",
        "lint:spelling": "pnpm cspell docs/**",
        "serve": "docusaurus serve",
        "start": "run-s clear:generated-docs generate-component-docs:running-storybook && run-p watch:component-docs start:docusaurus",
        "start:docusaurus": "docusaurus start --port 3300",
        "swizzle": "docusaurus swizzle",
        "watch:component-docs": "chokidar \"../storybook/src/admin-component-docs/**/*.stories.{ts,tsx}\" -c \"pnpm run clear:generated-docs && pnpm run generate-component-docs:running-storybook\"",
        "write-heading-ids": "docusaurus write-heading-ids",
        "write-translations": "docusaurus write-translations"
    },
    "browserslist": {
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ],
        "production": [
            ">0.5%",
            "not dead",
            "not op_mini all"
        ]
    },
    "dependencies": {
        "@algolia/client-search": "^5.47.0",
        "@docusaurus/core": "^3.9.2",
        "@docusaurus/preset-classic": "^3.9.2",
        "@docusaurus/theme-mermaid": "^3.9.2",
        "@mdx-js/react": "^3.1.1",
        "prism-react-renderer": "^2.4.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "search-insights": "^2.17.3"
    },
    "devDependencies": {
        "@comet/eslint-config": "workspace:*",
        "@docusaurus/module-type-aliases": "^3.9.2",
        "@docusaurus/plugin-content-docs": "^3.9.2",
        "@docusaurus/tsconfig": "^3.9.2",
        "@docusaurus/types": "^3.9.2",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "change-case": "^5.4.4",
        "chokidar-cli": "^3.0.0",
        "cspell": "^9.0.0",
        "eslint": "^9.30.1",
        "npm-run-all2": "^8.0.4",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": ">=18.0"
    }
}
